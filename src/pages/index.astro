---
import Layout from "../layouts/Layout.astro";

import "../styles/global.css";
import NewDebt from "../components/NewDebt.tsx";
import DebtList from "../components/DebtList.tsx";
import DebtSchedule from "../components/DebtSchedule.tsx";
---

<Layout>
    <div class="grid grid-cols-1 md:grid-cols-[1fr_3fr] gap-4">
        <aside>
            <NewDebt client:load />
        </aside>

        <main>
            <h2 class="text-2xl my-4">Debt List</h2>
            <DebtList client:load />

            <h2 class="text-2xl my-4">Debt Schedule</h2>
            <DebtSchedule client:load />
        </main>
    </div>
</Layout>
